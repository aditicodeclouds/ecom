                      <% if(product.stock> 0) { %>
                        <a href="<%= (isAuthenticated) ? ((c_status) ? '/cart' : '/add-to-cart/'+product.id) : '/login' %>" class="btn btn-primary shadow-0">
                          <i class="me-1 fa fa-shopping-basket"></i> <%= (c_status) ? 'Goto Cart' : 'Add to cart' %>
