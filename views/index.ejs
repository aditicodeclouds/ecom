      <!-- banner section start -->
      <div class="banner_section layout_padding">
         <div class="container">
            <div id="main_slider" class="carousel slide" data-ride="carousel">
               <div class="carousel-inner <%= banners.length %>">
                  <% if (banners.length > 0) { let counter = 0; %>
                     <% for (let ban of banners) { counter = counter+1; %>
                        <div class="carousel-item <%= counter==1 ? 'active' : '' %>">
                           <div class="row">
                              <div class="col-sm-12">
                                 <div class="banner_taital">
                                    <h1 class="outstanding_text"><%= ban.banner_heading1 %></h1>
                                    <h1 class="coffee_text"><%= ban.banner_heading2 %></h1>
                                    <p class="there_text"><%= ban.banner_description %></p>
                                    <div class="learnmore_bt"><a href="<%= ban.banner_link %>">Learn More</a></div>
                                 </div>
                              </div>
                           </div> 
                        </div>
                     <% } %>
                  <% } %>
               </div>
               <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
               <i class="fa fa-angle-left"></i>
               </a>
               <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
               <i class="fa fa-angle-right"></i>
               </a>
            </div>
         </div>
      </div>
      <!-- banner section end -->
