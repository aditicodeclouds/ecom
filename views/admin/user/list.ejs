<%- include('../includes/header.ejs') %>

  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
      <div class="col-md-12">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users / </span> List</h4>
      </div>
    </div>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <% if (errorMessage!='' ) { %>
        <h5 class="card-header text-error">
          <%= errorMessage %>
        </h5>
        <% } %>
          <% if (successMessage!='' ) { %>
            <h5 class="card-header text-success">
              <%= successMessage %>
            </h5>
            <% } %>
              <div class="table-responsive text-nowrap">
                <table class="table">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Address</th>
                      <th>Created At</th>
                    </tr>
                  </thead>
                  <tbody class="table-border-bottom-0">
                    <% if (users.length> 0) { %>
                      <% for (let user of users) { %>
                        <tr>
                          <td>
                            <%= user.id %>
                          </td>
                          <td>
                            <strong>
                              <%= user.name %>
                            </strong>
                          </td>
                          <td>
                            <strong>
                              <%= user.email %>
                            </strong>
                          </td>
                          <td>
                            <strong>
                              <%= user.full_address %>
                            </strong>
                          </td>
                          <td>
                            <%= date.format(user.createdAt,'YYYY/MM/DD HH:mmA'); %>
                          </td>
                        </tr>
                        <% } %>
                          <% } else { %>
                            <tr>
                              <td colspan="5"><strong>No result found!</strong></td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
    </div>
  </div>


  <%- include('../includes/footer.ejs') %>