<%- include('../includes/header.ejs') %>

  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
      <div class="col-md-6">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Categories / </span> List</h4>
      </div>
      <div class="col-md-6">
        <ul class="nav nav-pills flex-column flex-md-row mb-3 float-right">
          <li class="nav-item">
            <a class="nav-link active" href="/admin/category/add"><i class="fa fa-plus-square" aria-hidden="true"></i> Add Category</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <% if (errorMessage!='' ) { %>
        <h5 class="card-header text-error">
            <%= errorMessage %>
        </h5>
        <% } %>
        <% if (successMessage!='' ) { %>
            <h5 class="card-header text-success">
                <%= successMessage %>
            </h5>
            <% } %>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
            <% if (categories.length> 0) { %>
              <% for (let category of categories) { %>
                <tr>
                  <td>
                      <%= category.id %>
                  </td>
                  <td>
                    <strong>
                      <%= category.name %>
                    </strong>
                  </td>
                  <td>
                    <%= date.format(category.createdAt,'YYYY/MM/DD HH:mmA'); %>
                  </td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/admin/category/<%= category.id %>">
                          <i class="bx bx-edit-alt me-1"></i> Edit
                        </a>
                        <a class="dropdown-item" href="/admin/category-delete/<%= category.id %>">
                          <i class="bx bx-trash me-1"></i> Delete
                        </a>
                      </div>
                    </div>
                  </td>
                </tr>
                <% } %>
                  <% } else { %>
                    <tr>
                      <td colspan="4"><strong>No result found!</strong></td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <%- include('../includes/footer.ejs') %>